{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "noImplicitAny": true,
    "stripInternal": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES5",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "lib": [
      "es5",
      "es2015",
      "dom"
    ]
  },
  "include": [
    "src/**/*"
  ]
}